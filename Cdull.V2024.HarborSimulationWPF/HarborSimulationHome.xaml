<Page x:Class="Cdull.V2024.HarborSimulationWPF.HarborSimulationHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Cdull.V2024.HarborSimulationWPF"
      Title="HarborSimulation - Home" Height="350" Width="500">
   

    <Grid Height="300" Width="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Create Container Storage" Click="CreateContainerStorage_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Create Harbor" Click="CreateHarbor_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>

        <!-- Placeholder for displaying pages -->
        <Frame x:Name="MainFrame" Grid.Row="2"/>
    </Grid>
</Page>
